@page
@model RegisterModel

<div class="login-container">
    <div class="login-form">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" ></div>
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Email" />
                <span asp-validation-for="Input.Email" ></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Password"/>
                <span asp-validation-for="Input.Password" ></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password"/>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
